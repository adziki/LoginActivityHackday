<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.loginactivity"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="19"/>
    <application android:label="@string/app_name">
        <activity
            android:name="MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.LoginLibrary.LoginActivity" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name="com.example.LoginLibrary.ForgotPasswordActivity" android:theme="@android:style/Theme.Dialog"></activity>
    </application>
</manifest> 
